datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id       String    @id @default(uuid())
  first_name    String
  last_name     String
  email         String    @unique
  password      String?
  phone_number  String?
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  user_type     UserType
  accounts      Account[]
  Employer      Employer?
}

enum UserType {
  JOBSEEKER
  EMPLOYER
}

model Employer {
  employer_id         String        @id @default(uuid())
  user_id             String        @unique
  user                User          @relation(fields: [user_id], references: [user_id])
  position            String
  mobile              String
  company_name        String
  company_type_id     Int?
  company_type        CompanyType?  @relation(fields: [company_type_id], references: [id])
  industry_type_id    Int?
  industry_type       IndustryType? @relation(fields: [industry_type_id], references: [id])
  founded_in          DateTime?
  company_website     String?
  company_description String?
  country             String
  state               String
  city                String
  address             String
  jobs                Job[]
}

model Job {
  id                   String   @id @default(uuid())
  title                String
  description          String
  employment_type      String
  experience_level     String
  job_category         String
  application_deadline DateTime
  contact_info         String
  employer_id          String   @unique
  employer             Employer @relation(fields: [employer_id], references: [employer_id])
  createdAt            DateTime @default(now())
}

model CompanyType {
  id        Int        @id @default(autoincrement())
  type      String     @unique
  employers Employer[]
}

model IndustryType {
  id        Int        @id @default(autoincrement())
  type      String     @unique
  employers Employer[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  user              User    @relation(fields: [userId], references: [user_id])
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
}

